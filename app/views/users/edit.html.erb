<% provide(:title, 'Edit user') %>
<h1>Update your profile</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-conrol' %>

      <%= f.label :email%>
      <%= f.text_field :email, class: 'form-conrol' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-conrol' %>

      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation, class: 'form-conrol' %>

      <%= f.submit 'Save changes', class: 'btn btn-primary' %>
    <% end %>

    <div class='gravatar_edit'>
      <%= gravatar_for(@user) %>
      <a href='https://gravatar.com/emails' rel='noopener' target='_blank'>Change</a>
    </div>
  </div>
</div>
